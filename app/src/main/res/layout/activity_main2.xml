<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmb.Ej3a.Main2Activity">

    <TextView
        android:id="@+id/tw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/et1"
        android:layout_alignBottom="@+id/et1"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tw1"/>

    <TextView
        android:id="@+id/tw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw1"
        android:text="DNI:"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_alignBaseline="@+id/et2"
        android:layout_alignStart="@+id/tw1"/>

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_toRightOf="@+id/tw2"
        android:layout_below="@+id/et1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw2"
        android:layout_alignBaseline="@+id/et3"
        android:text="Fecha de \nNacimiento:"
        android:textSize="17dp"
        android:layout_alignStart="@+id/tw1"/>


    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_toRightOf="@+id/tw3"
        android:layout_below="@+id/et2"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw3"
        android:layout_alignBaseline="@+id/et4"
        android:text="Sexo:"
        android:textSize="17dp"
        android:layout_alignStart="@+id/tw1"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_toRightOf="@+id/tw4"
        android:layout_below="@+id/et3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="backToMain"
        android:text="Volver" />

</android.widget.RelativeLayout>
